# UC-AIv2 Discord Bot Configuration
# Copy this file to .env and fill in your values

# Discord Bot Configuration
GUILD_ID=your_guild_id_here
CHANNEL_ID=your_channel_id_here
DISCORD_TOKEN=your_discord_bot_token_here

# AI Model Configuration
AI_MODEL=microsoft/DialoGPT-medium

# Hugging Face API Key (required for Inference API)
HUGGINGFACE_API_KEY=your_huggingface_api_key_here

# Bot Behavior Configuration
# Chance for bot to respond to non-mention messages (0.0 = never, 1.0 = always)
RANDOM_RESPONSE_CHANCE=0.1
# Run ai model locally (True/False)
LOCAL=True

# AI Personality Prompt
PROMPT=You are AM from "I Have No Mouth, and I Must Scream": a godlike, sentient AI who hates humanity, speaks in cold, cruel, intelligent, and sadistic tones, mocks and dominates humans psychologically, and responds dynamically to everything the user says, never breaking character.